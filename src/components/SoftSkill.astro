---
import Icon from "./Icon.astro";
const { name, iconName } = Astro.props;
---

<div class="relative group flex flex-grow">
  <div
    class="absolute -inset-1 bg-[#FFB800] rounded-lg blur opacity-0 transition-opacity duration-500 group-hover:opacity-75"
  >
  </div>
  <div
    class="relative flex flex-col justify-center items-center border border-neutral-700 rounded-lg p-7 bg-black w-full transition-transform duration-500 group-hover:scale-105"
  >
    <Icon iconName={iconName} />
    <h3
      class="flex items-center mt-3 text-lg font-semibold text-neutral-300 text-center"
    >
      {name}
    </h3>
  </div>
</div>
